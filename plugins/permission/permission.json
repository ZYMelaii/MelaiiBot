{
    "style": "gnu",
    "cmd": "permission",
    "subcmd": [
        {
            "keyword": "allow",
            "collect": 0,
            "accept": "word"
        },
        {
            "keyword": "ban",
            "collect": 0,
            "accept": "word"
        }
    ],
    "options": {
        "keywords": [
            {
                "id": 0,
                "op": {
                    "short": "u",
                    "long": "user"
                },
                "collect": 0,
                "check": "(e) => !isNaN(Number(e)) || e == '$'",
                "help": "指定用户ID（$代指当前环境下的默认用户）"
            },
            {
                "id": 1,
                "op": {
                    "short": "g",
                    "long": "group"
                },
                "collect": 0,
                "check": "(e) => !isNaN(Number(e)) || e == '$'",
                "help": "指定群组ID（$代指当前环境下的默认群组）"
            },
            {
                "id": 2,
                "op": {
                    "short": "w",
                    "long": "whitelist"
                },
                "collect": 0,
                "check": "() => true",
                "help": "启用白名单"
            },
            {
                "id": 3,
                "op": {
                    "short": "b",
                    "long": "blacklist"
                },
                "collect": 0,
                "check": "() => true",
                "help": "启用黑名单"
            },
            {
                "id": 4,
                "op": {
                    "short": "h",
                    "long": "help"
                },
                "collect": 0,
                "check": "() => true",
                "help": "显示帮助信息"
            },
            {
                "id": 5,
                "op": {
                    "short": "r",
                    "long": "role"
                },
                "collect": 1,
                "check": "(e) => ['member', 'admin', 'owner'].includes(e)",
                "help": "指定对象的身份"
            }
        ],
        "conflicts": {}
    },
    "config": {
        "ignore": {
            "unknown": true,
            "bad_option": false,
            "bad_collect": false,
            "case": true,
            "repeated": false
        }
    }
}